@model IEnumerable<Candidate>
@if(Model.Count() > 0)
{
    <h6 class="display-5">
        Applications (@Model.Count())
    </h6>

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Email</th>
                <th>Full Name</th>
                <th>Applied At</th>
                <th>Course</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Candidate item in Model)
            {
                <tr>
                    <td>@item.Email</td>
                    <td>@item.FullName</td>
                    <td>@item.ApplyAt</td>
                    <td>@item.SelectedCourse</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        There is no application at the moment. Please click here to
        <a asp-action="Apply" class="alert-link">apply.</a>
    </div>
}